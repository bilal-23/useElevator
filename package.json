{
  "name": "use-elevator",
  "version": "0.1.0",
  "description": "A delightful React hook that transforms boring scroll-to-top actions into playful elevator experiences with music and smooth animations",
  "author": "Bilal Mansuri",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun --bun vite",
    "build": "bun --bun tsc && bun --bun vite build",
    "build:lib": "tsc --project tsconfig.build.json && bun --bun build --target=node ./lib/index.ts --outdir=./dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "bun --bun vite preview",
    "prepublishOnly": "bun run build:lib"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@rollup/plugin-url": "^8.0.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "keywords": [
    "react",
    "hook",
    "scroll",
    "elevator",
    "scroll-to-top",
    "smooth-scroll",
    "animation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bilal-23/use-elevator.git"
  }
}
